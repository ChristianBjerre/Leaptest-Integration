<?xml version="1.0"?>
<assembly>
  <id>plugin-assembly</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>zip</format>
  </formats>
  <files>
     <file>
         <source>target/teamcity-plugin.xml</source>
         <outputDirectory>/</outputDirectory>
     </file> 
     <file>
         <source>target/LeapTestTeamCityBridge-agent.zip</source>
         <outputDirectory>agent</outputDirectory>
     </file>
      <file>
          <source>target/LeapTestTeamCityBridge-runner.zip</source>
          <outputDirectory>agent</outputDirectory>
      </file>
  </files>
  <moduleSets>
    <moduleSet>
       <useAllReactorProjects>true</useAllReactorProjects>
       <includes>
           <include>LeapTestTeamCityBridgeGroup:LeapTestTeamCityBridge-server</include>
           <include>LeapTestTeamCityBridgeGroup:LeapTestTeamCityBridge-common</include>
       </includes> 
       <binaries>
           <outputDirectory>server</outputDirectory>
           <unpack>false</unpack>
           <dependencySets>
               <dependencySet>
                    <includes>
                         <include>*</include>
                    </includes>
               </dependencySet>
           </dependencySets>
       </binaries>
    </moduleSet>
  </moduleSets>
</assembly>
